    ns1:elucidation "A tessellation in which a tile has next two or more non spatially connected tiles."@en ;
    ns1:illustration "https://raw.githubusercontent.com/emmo-repo/EMMO/1.0.2/doc/figs/Fork.png"^^xsd:anyURI .

ns1:Gathering a owl:Class ;
    rdfs:label "Gathering"@en ;
    rdfs:comment "A mixed tiling in which a tile is the next of spatially connected tiles."@en ;
    rdfs:subClassOf ns1:MixedTiling ;
    skos:prefLabel "Gathering"@en ;
    ns1:elucidation "A mixed tiling in which a tile is the next of spatially connected tiles."@en ;
    ns1:illustration "https://raw.githubusercontent.com/emmo-repo/EMMO/1.0.2/doc/figs/Gathering.png"^^xsd:anyURI .

ns1:IntermidiateTile a owl:Class ;
    rdfs:subClassOf ns1:SpatioTemporalTileByPosition ;
    skos:prefLabel "IntermidiateTile"@en ;
    ns1:elucidation "A tile that has next and is next of other tiles within the same tessellation."@en ;
    ns1:illustration "https://w3id.org/emmo/raw/1.0.4/doc/figs/ThroughTile.png"^^xsd:anyURI .

ns1:Join a owl:Class ;
    rdfs:label "Join"@en ;
    rdfs:comment "A tessellation in which a tile is next for two or more non spatially connected tiles."@en ;
    rdfs:subClassOf ns1:TemporalTiling ;
    skos:prefLabel "Join"@en ;
    ns1:elucidation "A tessellation in which a tile is next for two or more non spatially connected tiles."@en ;
    ns1:illustration "https://raw.githubusercontent.com/emmo-repo/EMMO/1.0.2/doc/figs/Join.png"^^xsd:anyURI .

ns1:SpatialSequence a owl:Class ;
    rdfs:label "SpatialSequence"@en ;
    rdfs:comment "A monodimensional arrangement of tiles."@en ;
    rdfs:subClassOf ns1:Arrangement ;
    skos:altLabel "Sequence"@en ;
    skos:prefLabel "SpatialSequence"@en ;
    ns1:elucidation "A monodimensional arrangement of tiles."@en ;
    ns1:illustration "https://raw.githubusercontent.com/emmo-repo/EMMO/1.0.2/doc/figs/SpatialSequence.png"^^xsd:anyURI .

ns1:TemporalSequence a owl:Class ;
    rdfs:subClassOf ns1:TemporalTiling ;
    skos:altLabel "Sequence"@en ;
    skos:prefLabel "TemporalSequence"@en ;
    ns1:elucidation "A tessellation of temporal slices."@en ;
    ns1:illustration "https://raw.githubusercontent.com/emmo-repo/EMMO/1.0.2/doc/figs/Sequence.png"^^xsd:anyURI .

ns1:hasBeginTile a owl:AsymmetricProperty,
        owl:IrreflexiveProperty,
        owl:ObjectProperty ;
    rdfs:label "hasBeginTile"@en ;
    ns2:python_name "hasBeginTile"@en ;
    rdfs:comment "The relation between the whole and a temporal tile that has only outgoing temporal connections."^^xsd:string ;
    rdfs:range ns1:BeginTile ;
    rdfs:subPropertyOf ns1:hasTemporalTile ;
    skos:altLabel "hasTemporalFirst"@en ;
    skos:prefLabel "hasBeginTile"@en ;
