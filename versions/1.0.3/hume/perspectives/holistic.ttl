    owl:annotatedProperty skos:altLabel ;
    owl:annotatedSource ns1:Holistic ;
    owl:annotatedTarget "Wholistic"@en ;
    ns1:etymology "From the word 'holistic' with the 'w-' prefix, due to the affinity with the existing word 'whole', that share the same meaning of 'holos'."@en .

